using gcc : : : <cxxflags>-std=c++11 ;
using clang : : : <cxxflags>"-std=c++11 -stdlib=libc++" <linkflags>-stdlib=libc++ ;

project tutte : requirements <include>./include ;

import os ;
local BOOST_ROOT = [ os.environ BOOST_ROOT ] ;
use-project /boost : $(BOOST_ROOT) ;

lib gmp ;

exe tutte
	: src/main.cpp src/parse_graph.cpp gmp /boost/program_options
	: <link>static
	;

using testing ;
unit-test helpers_test : tutte : <testing.launcher>./run_tests.sh ;
install bin : tutte ;
